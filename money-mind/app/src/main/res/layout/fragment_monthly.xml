<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DailyLinearLayout"
        android:padding="14dp"
        android:orientation="horizontal"
        android:weightSum="60">

        <TextView
            android:id="@+id/DateMonthly_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="18"
            android:background="#0299AC"
            android:gravity="center"
            android:text="May"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="0.00"
            android:gravity="right"
            android:textColor="@color/colorAccent"
            android:id="@+id/IncomeMonthly_txt"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="€"
            android:gravity="left"
            android:textColor="@color/colorAccent"
            android:id="@+id/CurrencyIncomeMonthly_txt"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:text="0.00"
            android:gravity="right"
            android:textColor="@color/design_default_color_error"
            android:id="@+id/ExpenseMonthly_txt"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="€"
            android:gravity="left"
            android:textColor="@color/design_default_color_error"
            android:id="@+id/CurrencyExpenseMonthly_txt"/>


    </LinearLayout>

</RelativeLayout>